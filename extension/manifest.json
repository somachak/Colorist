{
  "manifest_version": 3,
  "name": "Colorist",
  "version": "0.1.1",
  "description": "Extract colors, typography, and design patterns from any webpage or image. Understand the role each color plays.",

  "permissions": [
    "activeTab",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Colorist - Extract Design Patterns"
  },

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/colorist.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
