{
  "manifest_version": 3,
  "name": "Colorist",
  "version": "0.1.0",
  "description": "Extract colors, typography, and design patterns from any webpage or image. Understand the role each color plays.",
  
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Colorist - Extract Design Patterns"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/colorist.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
